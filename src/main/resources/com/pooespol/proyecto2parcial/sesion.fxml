<VBox alignment="TOP_CENTER" minHeight="400.0" minWidth="700.0" prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pooespol.proyecto2parcial.SesionController">
   <children>
      <Label text="Iniciar Sesion">
         <font>
            <Font size="25.0" />
         </font>
         <padding>
            <Insets top="10.0" />
         </padding>
      </Label>
      <GridPane vgap="5.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="149.20001220703125" minWidth="10.0" prefWidth="71.60002899169922" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="236.39997100830078" minWidth="10.0" prefWidth="236.39997100830078" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Correo" />
            <Label text="Contraseña" GridPane.rowIndex="1" />
            <TextField fx:id="txtCorreo" promptText=" " GridPane.columnIndex="1" />
            <PasswordField fx:id="txtContrasena" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </GridPane>
      <HBox alignment="CENTER" prefHeight="36.0" prefWidth="328.0">
         <children>
            <Button fx:id="btnIngresar" mnemonicParsing="false" onMouseClicked="#irInterfaz" text="Ingresar" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="BASELINE_LEFT" prefHeight="52.0" prefWidth="328.0">
         <children>
            <Label fx:id="txtMostrar" alignment="BASELINE_LEFT" prefHeight="27.0" prefWidth="190.0" text="Copyright © Alfredo-Victor-Angel">
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
               <HBox.margin>
                  <Insets top="100.0" />
               </HBox.margin>
            </Label>
         </children>
         <VBox.margin>
            <Insets top="100.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
